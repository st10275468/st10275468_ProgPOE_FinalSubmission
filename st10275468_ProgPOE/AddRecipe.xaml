        <TextBox x:Name="txtName_Copy4" TextWrapping="Wrap" Grid.Column="1" Margin="181,204,147,174" Grid.Row="1" Background="White" BorderBrush="#00ABADB3" FontFamily="Roboto" VerticalContentAlignment="Center" Foreground="Black" FontSize="12" />
        <Button x:Name="btnAddIngredient" Content="Add Ingredient" Background="Black" BorderBrush="#00707070" Foreground="White" HorizontalContentAlignment="Left" Padding="10,1,1,1" FontFamily="Roboto" FontSize="12" Click="btnBack_Click" Grid.Column="1" Margin="181,233,175,142" Grid.Row="1"/>
