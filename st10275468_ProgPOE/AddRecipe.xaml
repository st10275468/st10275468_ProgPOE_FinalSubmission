        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:st10275468_ProgPOE"
        mc:Ignorable="d"
        Title="AddRecipe" Height="450" Width="600" Background="LightSkyBlue"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.RowSpan="2" Background="White">

            <Button x:Name="btnBack" Content="Back" Height="40" Background="Black" BorderBrush="#00707070" Foreground="White" HorizontalContentAlignment="Left" Padding="10,1,1,1" FontFamily="Roboto" FontSize="14" Margin="10,70,10,10" Click="btnBack_Click"/>

        </StackPanel>
        <Label Content="------Create a new Recipe-------" Margin="0,10,0,9" Width="356" HorizontalAlignment="Center" FontFamily="Roboto" Grid.Column="1" Padding="0,0,0,0" Foreground="Black" FontSize="25"/>
        <TextBox x:Name="txtName" TextWrapping="Wrap" Grid.Column="1" Margin="181,10,147,368" Grid.Row="1" Background="White" BorderBrush="#00ABADB3" FontFamily="Roboto" VerticalContentAlignment="Center" Foreground="Black" FontSize="12" />
        <Label Content="Ingredient Name:" Margin="78,82,0,289" Width="96" HorizontalAlignment="Left" FontFamily="Roboto" Padding="0,0,0,0" Foreground="Black" FontSize="12" Grid.Row="1" Grid.Column="1" RenderTransformOrigin="0.5,0.5" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.235"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Recipe Name:" Margin="98,12,0,359" Width="78" HorizontalAlignment="Left" FontFamily="Roboto" Padding="0,0,0,0" Foreground="Black" FontSize="12" Grid.Row="1" Grid.Column="1" RenderTransformOrigin="0.5,0.5" >
